{
    "workbench.tree.indent": 18,
    "workbench.activityBar.location": "top", // hide bottom bar
    "workbench.colorTheme": "Railgun",
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#3d393a",
        "editor.wordHighlightTextBorder": "#DB9833",
        "notebook.focusedCellBorder": "#DB9833",
        "notebook.focusedEditorBorder": "#DB9833",
    },
    
    "notebook.output.textLineLimit": 100,
    
    "editor.fontSize": 14,
    "editor.lineHeight": 1.42857,  // height multiplier; makes font size 14 have line height of 14px*1.42=~20px
  
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
  
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1,
  
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.defaultProfile.osx": "bash",
  
    "python.createEnvironment.trigger": "off",
    "python.analysis.typeCheckingMode": "standard",
    "notebook.diff.experimental.toggleInline": true,
  
    "debug.onTaskErrors": "showErrors",
    "security.workspace.trust.untrustedFiles": "open",
    "window.confirmSaveUntitledWorkspace": false,
    "explorer.confirmPasteNative": false,
    "editor.parameterHints.cycle": false,
    "editor.parameterHints.enabled": false,
    "editor.inlineSuggest.showToolbar": "never",
    "editor.quickSuggestionsDelay": 300,
    "editor.suggest.matchOnWordStartOnly": false,
    "files.exclude": {"**/__pycache__": true},
    "extensions.ignoreRecommendations": true,
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "chat.commandCenter.enabled": false,
    "editor.formatOnSave": true,
    "window.title": "${dirty}${activeEditorShort}${separator}${folderPath}",
    "editor.rulers": [88,],
    "workbench.sideBar.location": "right",
    "editor.allowVariableFontsInAccessibilityMode": true,
    "terminal.integrated.fontFamily": "monospace",
    "editor.fontFamily": "Google Sans Code, Menlo, Monaco, 'Courier New', monospace",
    "git.openRepositoryInParentFolders": "always",
    "workbench.editor.empty.hint": "hidden",
  }